<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|bottom"
    android:background="@drawable/bg_splash"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".SettingsWelcome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/welcome_buttonPinConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/setting_pin" />

        <Button
            android:id="@+id/welcome_buttonCommandConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/setting_command" />

        <Button
            android:id="@+id/welcome_buttonTest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tes SMS" />
    </LinearLayout>

</RelativeLayout>