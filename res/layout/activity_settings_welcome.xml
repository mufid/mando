<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".SettingsWelcome" >
    
    <Button
        android:id="@+id/welcome_buttonPinConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_pin" />

    <Button
        android:id="@+id/welcome_buttonCommandConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_command" />

    <Button
        android:id="@+id/welcome_buttonTest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tes SMS" />

</LinearLayout>