<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/MButton</item>
    </style>
    <style name="buttontoggle" parent="@android:style/Widget.CompoundButton">
        <item name="android:padding">20dp</item>
    </style>
    <style name="activebutton" parent="buttontoggle">
        <item name="android:text">@string/aktif</item>
    </style>
    <style name="nonactivebutton" parent="buttontoggle">
        <item name="android:background">#33B5E5</item>
        <item name="android:text">@string/aktif_tidak</item>
    </style>
    <style name="MButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_choco</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3B321A</item>
    </style>
    <style name="MWhiteBackground">
        
    </style>
</resources>